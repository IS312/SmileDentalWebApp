@model IEnumerable<SmileDentalWebApp.Models.Branch>

@{
    ViewData["Title"] = "Index";
}

<div class="text-center">
    <h1 class="display-4 font-text">All Branches</h1>
    <p>You can manage all branch details here.</p>
</div>

<p>
    <a class="btn btn-primary" asp-action="Create"><i class="fa fa-paper-plane"></i> Add New Branch</a>
</p>
<hr />
<div class="row">
    @foreach (var item in Model)
    {
    <div class="card-body col-md-4 mb-2">
        <h4 class="card-title">@item.BranchName</h4>
        <p class="card-text"><i class="fa fa-address-card"></i> @item.BranchAddress</p>
        <p class="card-text"><i class="fa fa-phone"></i> @item.BranchContactNo</p>
        <div class="row">
            <div class="col-md-6">
                <a asp-action="Edit" class="btn btn-info btn-block" asp-route-id="@item.BranchID"><i class="fa fa-edit"></i> Edit</a>
            </div>
            <div class="col-md-6">
                <a asp-action="Delete" class="btn btn-info btn-danger"  asp-route-id="@item.BranchID"><i class="fa fa-trash"></i> Delete</a>
            </div>
        </div>
    </div>
    }
</div>