@model SmileDentalWebApp.Models.Testimonial

@{
    ViewData["Title"] = "Delete";
}
<div class="text-center">
    <h1 class="display-4 font-text">Delete Testimonials Details</h1>
    <p>You can remove testimonials details here.</p>
</div>
<hr />
<div>
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Name)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Name)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.TestimonialText)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.TestimonialText)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.TestimonialDate)
        </dt>
        <dd class="col-sm-10">
            @Model.TestimonialDate.ToString("dddd, dd MMMM yyyy")
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Rating)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Rating)
        </dd>
    </dl>

    <form asp-action="Delete">
        <input type="hidden" asp-for="TestimonialID" />
        <input type="submit" value="Confirm Delete" class="btn btn-danger" />
    </form>
</div>
