@model IEnumerable<SmileDentalWebApp.Models.Appointment>

@{
    ViewData["Title"] = "Appointments";
}

<div class="text-center">
    <h1 class="display-4 font-text">BOOK AN APPOINTMENT</h1>
    <p>Once you submit the request form below, our friendly staff will be in contact with you to set up a dental appointment at a time that suits you. In case you need an urgent appointment, please contact us on 0800 476 453</p>
    <small>* 24 hour cancellation policy applies</small>
</div>
<hr />
<div class="row">
    @foreach (var item in Model)
    {
        <div class="col-md-4 mb-2">
            <div class="card w-100">
                <div class="card-body">
                    <h4 class="card-title">@item.Name</h4>
                    <p class="card-text">On @item.AppointmentDate.ToString("dddd, dd MMMM yyyy")</p>
                    <p class="card-text">At @item.Branch.BranchName</p>
                    <p class="card-text">@item.ReasonForVisit</p>
                    <p class="card-text"><i class="fa fa-phone"></i> @item.ContactNo</p>
                </div>
                <a asp-action="CancelAppointment" class="btn btn-info btn-danger" asp-route-id="@item.AppointmentID"><i class="fa fa-trash"></i> Cancel Appointment</a>
            </div>

        </div>
    }
</div>